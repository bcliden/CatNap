<% include partials/header %>

<div class="container">

  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to CatNap~</h1>
      <p>View our cozy nap spots</p>
      <p>
        <a href="/napspots/new" class="btn btn-primary btn-lg">Add A Nap Spot</a>
      </p>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Most Popular Spots!</h3>
    </div>
  </div>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% napspots.forEach(function(napspot){ %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= napspot.image %>">
          <div class="caption">
            <h4> <%= napspot.name %> </h4>
          </div>
          <p>
              <a href="/napspots/<%= napspot._id %>" class="btn btn-primary">More Info</a>
          </p>
        </div>
      </div>
    <% }); %>
  </div>

</div>

 <% include partials/footer %>
