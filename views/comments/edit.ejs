<% include ../partials/header %>

<div class="container">
<div class="row">

  <h1 class="form-head">Edit Comment</h1>
  <div class="form-page">
    <form class="" action="/napspots/<%= napspot_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
      <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" placeholder="text">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
      </div>
    </form>
    <a href="/napspots">Go back to Nap Spots.</a>
  </div>

</div>
</div>

